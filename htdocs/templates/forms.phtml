        input#text(type='text', name='text', placeholder='Text', tabindex='&num;{tab_index++}')
      fieldset
        label(for='password') Password
        input#password(type='password', name='password', placeholder='Password', tabindex='&num;{tab_index++}')
      fieldset
        label(for='url') URL
        input#url(type='url', name='url', placeholder='Url', tabindex='&num;{tab_index++}')
      fieldset
        label(for='tel') Tel
        input#tel(type='tel', name='tel', placeholder='Tel', tabindex='&num;{tab_index++}')
    article.grid_4
      fieldset
        label(for='email') Email
        input#email(type='email', name='email', placeholder='Email', tabindex='&num;{tab_index++}')
      fieldset
        label(for='options') Options
        span.select
          select#dropdown(name='dropdown', tabindex='&num;{tab_index++}')
            option(selected='') Option 1
            option Option 2
            option Option 3
      fieldset
        label(for='message') Message
        textarea#message(name='message', placeholder='Message...', tabindex='&num;{tab_index++}')  
  section.row
    article.grid_4 &amp;nbsp;
    article.grid_2          
      input#submitbtn(type='reset', name='reset', tabindex='&num;{tab_index++}', value='Reset') 
    article.grid_2
      input#submitbtn(type='submit', name='submit', tabindex='&num;{tab_index++}', value='Submit')    </code></pre>
