extends jade/layout/master.jade

block config
  - currentPage = menuPage
  - title = title + ' - Menus'

block content
  h2 Menus
  p.
    The Menu panel on this page is defined with the following code snippets....
  h3 layout/master.jade
  pre
    code.
      //- Compile-time config variables
      - homePage = ['introduction', 'index.php']
      - setupPage = ['Setup', 'setup.php']
      - paraPage = ['Paragraph Text', 'paras.php']
      - tablesPage = ['Tables', 'tables.php']
      - currentPage = homePage
      +navpanel([homePage, setupPage, paraPage, tablesPage], currentPage)
  h3 mixins/navpanel.jade
  pre
    code.
      //- NavPanel Mixin 
      mixin navpanel(pages, currentPage)
        nav.navpanel
          ol     
            each page, i in pages
              if(page[1] == currentPage[1])
                li.selected
                  a(href="#")
                    span.number
                    span.label &num;{page[0]}
                  span.arrow
              else
                li
                  a(href="&num;{page[1]}")
                    span.number
                    span.label &num;{page[0]}
                  span.arrow
  h3 layout.css
  pre
    code.
      /**********************************************
      navpanel
      ***********************************************/
      .navpanel {
          float:left;
          margin-bottom:30px;
          counter-reset:nav_sections;
          width: 100%;
          margin-left:-20px;
      }
      .navpanel ol {
          list-style:none;
          border:1px solid #e5e5e5;
          border-radius:5px;
          margin:0;
      }
      .navpanel li {    
          margin-left:0;
          position:relative;
          background: inherit;
          counter-increment:nav_sections;
          line-height: 1.5;
      }
      .navpanel a {
          text-decoration:none;
          background-color:#f7f7f7;
          border-bottom:1px solid #fff;
          color:#939ca3;
          display:block;
          padding:20px;
      }
      .navpanel li:first-child a {
          border-top-left-radius:4px;
          border-top-right-radius:4px;
      }
      .navpanel li:last-child a {
          border-bottom:none;
          border-bottom-left-radius:4px;
          border-bottom-right-radius:4px;
      }
      .navpanel a:hover, .navpanel a:focus {
          background-color:#edecec;
          text-decoration:none;
      }
      .navpanel .selected a {
          border-bottom:1px solid #eee;
          background-color:#fff;
          box-shadow:inset 0 2px 2px rgba(0, 0, 0, 0.1);
          color:#69aa35;
      }
      .navpanel .number::before {
          content:counter(nav_sections, decimal-leading-zero);
          color:#bbbfbf;
          float:left;
          font-size:1.66667em;
      }
      .navpanel .selected .number::before { 
          color:#69aa35; 
      }
      .navpanel .label {
          display:block;
          margin-left:40px;
          padding-top:6px;
      }
      .navpanel .arrow {
          background:transparent url(/img/navpanel_arrow.jpg) 0 0 no-repeat;
          display:none;
          height:15px;
          position:absolute;
          right:-10px;
          top:45%;
          width:11px;
      }
      .navpanel .selected .arrow { display:block; }
